{
  "compilerOptions": {
    "target": "ES2022",
    "module": "node18",
    "outDir": "dist",
    "baseUrl": "../",
    "paths": {
      "@shared/*": ["shared/*"]
    },
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["**/*.ts", "../shared/**/*"]
}
