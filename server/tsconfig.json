{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "bundler",
    "outDir": "dist",
    "baseUrl": ".",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "paths": {
      "@dist/*": ["dist/*"],
      "@cross-cribbs/shared-types/*": ["../shared/types/*"]
    }
  },
  "include": ["**/*.ts"]
}
